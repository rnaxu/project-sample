{
  "name": "project-sample",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "clean": "rm -rf dist",
    "sprite": "spritesmith --rc spritesmith.js",
    "build": "npm run build:html && npm run copy:img && build:webpack",
    "dev": "npm run dev:html & npm run copy:img & npm run dev:webpack & npm run bs",
    "bs": "browser-sync start --server --serveStatic './dist' --files './dist/**/*.html, ./dist/css/**/*.css, ./dist/js/**/*.js, ./dist/img/**/*.png'",
    "build:webpack": "webpack -d --progress --colors",
    "dev:webpack": "webpack -d --progress --colors --watch",
    "build:html": "babel-node metalsmith.js",
    "dev:html": "babel-node metalsmith.js",
    "copy:img": "mkdir -p ./dist/img && cp ./src/img/*.png ./dist/img/",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": "https://github.com/rnaxu/project-sample.git",
  "author": "rnaxu <mayumiii.seki@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-loader": "^7.1.1",
    "babel-preset-es2015": "^6.24.1",
    "babel-register": "^6.24.1",
    "browser-sync": "^2.18.13",
    "css-loader": "^0.28.4",
    "eslint": "^4.4.1",
    "eslint-config-airbnb-base": "^11.3.1",
    "eslint-loader": "^1.9.0",
    "eslint-plugin-import": "^2.7.0",
    "extract-text-webpack-plugin": "^3.0.0",
    "file-loader": "^0.11.2",
    "handlebars": "^4.0.10",
    "metalsmith": "^2.3.0",
    "metalsmith-beautify": "^0.2.0",
    "metalsmith-collections": "^0.9.0",
    "metalsmith-in-place": "1.4.4",
    "metalsmith-layouts": "^1.8.1",
    "metalsmith-models": "^0.0.3",
    "metalsmith-watch": "^1.0.3",
    "postcss": "^6.0.9",
    "postcss-cssnext": "^3.0.2",
    "postcss-import": "^10.0.0",
    "postcss-loader": "^2.0.6",
    "postcss-nested": "^2.1.1",
    "spritesmith-cli": "^1.1.2",
    "style-loader": "^0.18.2",
    "stylelint": "^8.0.0",
    "stylelint-config-standard": "^17.0.0",
    "uglifyjs-webpack-plugin": "^0.4.6",
    "webpack": "^3.5.4"
  }
}
